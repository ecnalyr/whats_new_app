<h1>Listing products</h1>
<h1><%= @last %></h1>
<table class="table table-bordered table-condensed">
  <tr>
    <th><%= sortable "store" %></th>
    <th><%= sortable "name" %></th>
    <th><%= sortable "price" %></th>
    <th><%= sortable "created_at" %></th>
    <th>Sku</th>
  </tr>

<% @products.each do |product| %>
  <tr class="<%= product.created_at  >= @last_visit ? 'product_row success' : 'product_row' %>" >
    <td><%= product.store %></td>
    <td><%= link_to image_tag(product.imageLink, :alt => product.name, :size => "135x135"), product.link %>
        <%= product.name %></td>
    <td><%= number_to_currency(product.price) %></td>
    <td><%= product.created_at.localtime.to_s(:short) %> <%= product.created_at%></td>
    <td><%= product.sku %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
