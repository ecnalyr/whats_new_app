<h1>Listing products</h1>

<table class="table table-bordered table-condensed">
  <tr>
    <th><%= sortable "name" %></th>
    <th><%= sortable "price" %></th>
    <th><%= sortable "scrape_time", "Scrape Time" %></th>
    <th>Sku</th>
  </tr>

<% @products.each do |product| %>
  <tr class="product_row">
    <td><%= link_to image_tag(product.imageLink, :alt => product.name), product.link %><%= product.name %></td>
    <td><%= number_to_currency(product.price) %></td>
    <td><%= product.scrape_time.localtime.to_s(:short) %></td>
    <td><%= product.sku %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>
